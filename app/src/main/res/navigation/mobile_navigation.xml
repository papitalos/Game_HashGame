<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_join">

    <fragment
        android:id="@+id/navigation_invite"
        android:name="ipca.game.hash.ui.invites.InviteFragment"
        android:label="@string/title_invite"
        tools:layout="@layout/fragment_invite" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="ipca.game.hash.ui.user.UserFragment"
        android:label="@string/title_user"
        tools:layout="@layout/fragment_user" />

    <fragment
        android:id="@+id/navigation_join"
        android:name="ipca.game.hash.ui.join.JoinFragment"
        android:label="@string/title_join"
        tools:layout="@layout/fragment_join" />

    <fragment
        android:id="@+id/navigation_games"
        android:name="ipca.game.hash.ui.games.GameFragment"
        android:label="@string/title_games"
        tools:layout="@layout/fragment_games" />

</navigation>